@*View for admin user login*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="DealSe Admin Panel" />
    <meta name="author" content="" />
    <title>Login | DealSe</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic">
    <link href="~/admin/assets/css/admincss.css" rel="stylesheet" />
    <script src="~/admin/assets/js/topjs.js"></script>
    <script src="/admin/assets/js/jquery-1.11.0.min.js"></script>
</head>
<body class="page-body login-page login-form-fall">
    <div class="login-container">
        <div class="login-header login-caret">
            <div class="login-content">
                <a href="#" class="logo" style="font-size: 50px;color:dimgray;">
                    <h1>DealSe</h1>
                </a>
                <p class="description">Dear user, log in to access the DealSe admin area!</p>
                <div class="login-progressbar-indicator">
                    <h3>43%</h3>
                    <span>logging in...</span>
                </div>
            </div>
        </div>
        <div class="login-progressbar">
            <div></div>
        </div>
        <div class="login-form">
            <div class="login-content">
                <div class="form-login-error">
                    <h3>Invalid login</h3>
                    <p><strong id="errorMessage"></strong></p>
                </div>
                <form method="post" role="form" id="form_login">
                    @if (TempData["passwordsuccess"] != null)
                    {
                        <div id="remove" style="">
                            <div class="form-forgotpassword-success" style="display: block;">
                                <i class="entypo-check"></i>
                                <h3>Password changed successfully.</h3>
                            </div>
                        </div>
                    }
                    @if (TempData["PasswordChanged"] != null)
                    {
                        <div id="remove" style="">
                            <div class="form-forgotpassword-success" style="display: block;">
                                <i class="entypo-key"></i>
                                <h3>@TempData["PasswordChanged"].ToString()</h3>
                            </div>
                        </div>
                    }
                    @if (TempData["LoginAttemptsFail"] != null)
                    {
                        <div class="form-login-error" style="display: block; height: auto;" id="dvLoginAttemptsFail">
                            <p><strong>@TempData["LoginAttemptsFail"].ToString()</strong></p>
                        </div>
                    }
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-mail"></i>
                            </div>
                            <input type="text" class="form-control" name="username" id="username" placeholder="Email" data-mask="email" autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="entypo-key"></i>
                            </div>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block btn-login">
                            <i class="entypo-login"></i>
                            Login
                        </button>
                    </div>
                </form>
                <div class="login-bottom-links">
                    <a asp-area="admin" asp-controller="home" asp-action="ForgotPassword">
                        Forgot your password?
                    </a>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/assets/js/bottomjs.js"></script>
    <script src="~/admin/assets/js/neon-login.js"></script>
</body>
</html>